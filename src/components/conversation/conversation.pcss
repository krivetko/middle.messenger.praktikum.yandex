.ui__conversation {
    display: flex;
    flex-direction: column;
    width: 100%;
    border-left: #EAEAEA;
    padding: 10px;
}

.ui__conversation__header {
    height: 50px;
    border-bottom: 1px solid #EAEAEA;
    display: flex;
    align-items: center;
}

.ui__conversation__header__contact {
    flex-grow: 1;
}

.ui__conversation__header__contact__avatar {
    border-radius: 50%;
    color: #999999;
    border: none;
    height: 34px;
    width: 34px;
}

.ui__conversation__header__contact__name {
    font-weight: 600;
    font-size: 16px;
    color: #1E1E1E;
    padding-left: 10px;
}

.ui__conversation__header__more-button {
    border: none;
    background: none;
    height: 34px;
    width: 34px;
}

.ui__conversation__body {
    flex-grow: 1;
}

.ui__conversation__body__grid {
    display: grid;
}

.ui__conversation__message {
    height: 50px;
    border-top: 1px solid #EAEAEA;
    align-items: center;
    display: flex;
    align-items: center;
}

.ui__conversation__message__attach {
    border: none;
    background: none;
}
.ui__conversation__message__attach_img {
    width: 32px;
    height: 32px;
}

.ui__conversation__message__input {
    flex-grow: 1;
    height: 32px;
    border-radius: 30px;
    background: #EFEFEF;
    margin: 0 10px;
    border: none;
}

.ui__conversation__message__input::placeholder {
    padding-left: 25px;
    color: #999999;
}

.ui__conversation__message__send {
    border: none;
    border-radius: 50;
    background: #3369F3;
    height: 28px;
    width: 28px;
}

.ui__conversation__message__send_img {
    width: 16px;
    height: 16px;
}

.message {
    max-width: 50%;
    background: #00bfb6;
    padding: 5px;
    text-align: left;
    font-weight: 500;
    font-size: 12px;
    color: #1E1E1E;
    position:relative;
    border-radius: 10px;
    margin: 5px;
    display: grid;
}

.message-in {
    background: #F8F8F8;
    justify-self: left;
    align-self: bottom;
}

.message-in:before {
    content: "";
    width: 0px;
    height: 0px;
    position: absolute;
    border-left: 5px solid #F8F8F8;
    border-right: 5px solid transparent;
    border-top: 5px solid #F8F8F8;
    border-bottom: 5px solid transparent;
    left: 0px;
    top: 0px;
}

.message-out {
    background: #E4EDFD;
    justify-self: right;
    align-self: bottom;
}

.message-out:before {
    content: "";
    width: 0px;
    height: 0px;
    position: absolute;
    border-left: 5px solid transparent;
    border-right: 5px solid #E4EDFD;
    border-top: 5px solid transparent;
    border-bottom: 5px solid #E4EDFD;
    right: 0px;
    bottom: 0px;
}

.message__time {
    justify-self: right;
    font-weight: 500;
    font-size: 12px;
    color: #1E1E1E;
}

.message-out__time {
    color: #3369F3;
}

.message__double_check_img {
    height: 12px;
    width: 12px;
}